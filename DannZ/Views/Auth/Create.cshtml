@*
    THIS IS THE VIEW FOR CREATING NEW USERS
*@
@{
    ViewData["title"] = "Register";
}

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div>
        <label for="Email">Email *</label>
        <input type="email" name="Email" placeholder="example@example.com" id="Email" />
    </div>

    <div>
        <label for="Password">Password *</label>
        <input type="password" name="Password" placeholder="your password" id="Password" />
    </div>

    <div>
        <label for="Name">Name</label>
        <input type="text" name="Name" placeholder="Michael Kaiser" id="Name" />
    </div>

    <div>
        <label for="avatar">Avatar</label>
        <input type="file" name="avatar" id="avatar" />
    </div>

    <input type="submit" value="Register" />

    <a href="/Account/Login">Login Here</a>

</form>